NAME 		= web_server_client
DIR_SRC = src
DIR_INCLUDE = include
COMP		= g++
LINK		= ld
MAKEDEPEND 	= g++ -MM -MF

DIR_ROOT = ../..
DIR_IRODS	= $$IRODS_HOME

DIR_GRASSROOTS_UTIL = ../util
DIR_GRASSROOTS_UTIL_INC = $(DIR_GRASSROOTS_UTIL)/include
DIR_GRASSROOTS_UTIL_LIB = $(DIR_GRASSROOTS_UTIL)/$(BUILD)
GRASSROOTS_UTIL_LIB_NAME = grassroots_util


DIR_GRASSROOTS_NETWORK = ../network
DIR_GRASSROOTS_NETWORK_INC = $(DIR_GRASSROOTS_NETWORK)/include
DIR_GRASSROOTS_NETWORK_LIB = $(DIR_GRASSROOTS_NETWORK)/$(BUILD)
GRASSROOTS_NETWORK_LIB_NAME = grassroots_network


DIR_GRASSROOTS_SERVICES = ../services/lib
DIR_GRASSROOTS_SERVICES_INC = $(DIR_GRASSROOTS_SERVICES)/include
DIR_GRASSROOTS_SERVICES_LIB = $(DIR_GRASSROOTS_SERVICES)/$(BUILD)
GRASSROOTS_SERVICES_LIB_NAME = grassroots_service


DIR_GRASSROOTS_SERVER_INC = ../server/include


DIR_INSTALL = ../../grassroots_demo

BUILD		= debug

VPATH	= \
	$(DIR_SRC) 

INCLUDES = \
	-I$(DIR_INCLUDE) \
	-I$(DIR_GRASSROOTS_UTIL_INC) \
	-I$(DIR_GRASSROOTS_UTIL_INC)/containers \
	-I$(DIR_GRASSROOTS_NETWORK_INC) \
	-I$(DIR_GRASSROOTS_SERVER_INC) \
	-I$(DIR_GRASSROOTS_SERVICES_INC) \
	-I$(DIR_IRODS)/lib/core/include 
	
SRCS 	= \
	web_server_client.c 


LDFLAGS += -ljansson \
	-L$(DIR_GRASSROOTS_UTIL_LIB) -l$(GRASSROOTS_UTIL_LIB_NAME)  \
	-L$(DIR_GRASSROOTS_NETWORK_LIB) -l$(GRASSROOTS_NETWORK_LIB_NAME) \
	-L$(DIR_GRASSROOTS_SERVICES_LIB) -l$(GRASSROOTS_SERVICES_LIB_NAME) \
	-ldl 


include $(DIR_ROOT)/generic_makefiles/executable.makefile

.PHONY: all


all: exe




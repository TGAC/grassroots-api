Linux64-Centos  : gcc : GCC.sh  4.4.2 --without-debug --without-ncbi-c --with-internal --with-mt --with-flat-makefile <ENV>NCBI_SWIG_LANG="python";CPPFLAGS=-DNCBI_TEMPSTR_USE_A_COPY</ENV>

